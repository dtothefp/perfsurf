<h1><%= @user.email %></h1>

<%= link_to "Edit Account", edit_user_path(@user) %>

<div>
  <%= link_to "See All Surf Locations", locations_path %>
</div>

<h2>Favorite Locations:</h2>
<ul>
  <% @locations.each do |location| %>
    <li><%= link_to location.name, location_path(location) %></li>
  <% end %>
</ul>
